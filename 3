class Book:
    def __init__(self, title, author):
        self.__title = title  
        self.__author = author 

    def get_title(self):
        return self.__title

    def get_author(self):
        return self.__author

    def book_info(self):
        return f"'{self.__title}' by {self.__author}"

if __name__ == "__main__":
    book = Book("1984", "Pepe")
    print(book.book_info())  
